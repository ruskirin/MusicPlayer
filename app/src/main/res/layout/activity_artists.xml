<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_artist_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="8dp"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    >
    <ImageView android:id="@+id/artist_activity_image"
        android:layout_width="wrap_content" android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        />
    <TextView android:id="@+id/artist_activity_bio_name"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:fontFamily="@font/aldrich"
        android:textStyle="bold"
        tools:text="BLUE STAHLI"/>

    <ScrollView
        android:layout_width="match_parent" android:layout_height="0dp"
        android:paddingTop="8dp" android:paddingBottom="8dp"
        android:layout_weight="1.5">

        <TextView android:id="@+id/artist_activity_bio_bio"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:paddingStart="40dp" android:paddingEnd="40dp"
            android:textStyle="italic"
            android:text="@string/bluestahli_bio"/>
    </ScrollView>

    <ListView android:id="@+id/artist_activity_listview"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:paddingTop="8dp"
        android:layout_weight="6">

    </ListView>

</LinearLayout>